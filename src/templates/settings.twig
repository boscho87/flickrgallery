{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("itscoding\\flickrgallery\\assetbundles\\flickrgallery\\FlickrGalleryAsset") %}

{{ forms.textField({
    label: 'api.key'|t('flickr-gallery'),
    instructions: 'api.key.instructions'|t('flickr-gallery'),
    id: 'apiKey',
    name: 'apiKey',
    value: settings['apiKey']})
}}

{{ forms.textField({
    label: 'app.secret'|t('flickr-gallery'),
    instructions: 'app.secret.instructions'|t('flickr-gallery'),
    id: 'appSecret',
    name: 'appSecret',
    value: settings['appSecret']})
}}

